{
    "compilerOptions": {
        "module": "CommonJS",
        "target":"ES6",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "allowJs": true,
        "noEmitOnError": false,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "pretty": true,
        "outDir": "./dist",
        "lib": [
            "dom",
            "es2017"
        ],
    },
    "exclude": [
        "../src/**/*",
        "node_modules"
    ]
}